<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.opet.opet.MainActivity">

    <EditText
        android:hint="Valor da Comanda"
        android:id="@+id/editComanda"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editPessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade de Pessoas"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/CheckServiço"
        android:text="10% de Serviço."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Calcular"
        android:onClick="calcularRateio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textValor"
        android:text="Resultado"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
